{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Referencias de documentos en data",
  "type": "object",
  "additionalProperties": false,
  "required": ["descripcion", "version", "fecha_actualizacion", "referencias"],
  "properties": {
    "descripcion": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "fecha_actualizacion": {
      "type": "string",
      "format": "date"
    },
    "referencias": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/Referencia"
      }
    }
  },
  "$defs": {
    "Referencia": {
      "type": "object",
      "additionalProperties": false,
      "required": ["numero", "titulo", "path", "url"],
      "properties": {
        "numero": {
          "type": "integer",
          "minimum": 1
        },
        "titulo": {
          "type": "string",
          "minLength": 1
        },
        "path": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "descripcion": {
          "type": "string"
        },
        "notas": {
          "type": "string"
        }
      }
    }
  }
}
